package esmith;

use strict;
use Errno;
use esmith::util;

use esmith::AccountsDB;

my $adb = esmith::AccountsDB->open_ro();
my $event = $ARGV[0];
my @users = map { $_->key } $adb->users;
my @newusers;

if($ARGV[1]) {
    @newusers = $ARGV[1];
} else {
    @newusers = @users;
}

foreach my $user ( @newusers )
{
    die "$user is not a user account\n"
        unless ( grep /^$user$/, @users );

    # Windows 7 and above each have a new user profile type defined by the .Vx file extension.
    my @dirs = (
	'/var/lib/nethserver/profile/' . $user,
	'/var/lib/nethserver/profile/' . $user . '.V2', # Windows 7
	'/var/lib/nethserver/profile/' . $user . '.V3', # Windows 8
	'/var/lib/nethserver/profile/' . $user . '.V4', # Windows 8.1
	'/var/lib/nethserver/profile/' . $user . '.V5', # Windows 10
	'/var/lib/nethserver/profile/' . $user . '.V6' # Windows 10 anniversary
	);
    
    foreach my $dir (@dirs)  {
	if( ! -d $dir) {
	    mkdir $dir;
	    esmith::util::chownFile($user, $user, $dir) || 
		warn "Couldn't change ownership of $dir\n";
	} 
	chmod 0700, $dir;  # Remove setgid bit
    }
}

exit (0);
