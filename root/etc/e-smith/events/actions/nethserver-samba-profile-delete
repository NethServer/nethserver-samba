package esmith;

use strict;
use Errno;
use File::Path;

use esmith::AccountsDB;
my $adb = esmith::AccountsDB->open_ro();

my $event = $ARGV [0];
my $account = $ARGV [1];

$a = $adb->get($account) || undef;
unless ( defined $a && $a->prop('type') eq "user-deleted" )
{
    warn "$account is not a user account\n";
    exit (0);
}

my @dirs = (
	'','V2','V3','V4','V5'
        
); 

foreach my $dir (@dirs)  {
	$userdir ='/var/lib/nethserver/profile/' . $account.$dir
 
    next unless -d $userdir;
    rmtree( $userdir) || warn "Couldn't remove user `$account` profile directory $userdir \n";

}

exit (0);
